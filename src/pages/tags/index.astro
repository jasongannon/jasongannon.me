---
import Container from "@components/Container.astro";
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import H1 from "@components/Heading1.astro";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tags";
---

<BaseLayout pageTitle={pageTitle}>
  <Container>
    <H1  pageTitle={pageTitle}/>
    <div class="flex flex-col gap-2">
      {
        tags.map((tag) => (
          <a
            href={`/tags/${tag}`}
            class="px-2 py-1 text-base rounded-lg text-secondary hover:text-secondary-content border border-secondary hover:bg-secondary transition-colors w-fit"
          >
            #{tag}
          </a>
        ))
      }
    </div>
  </Container>
</BaseLayout>
