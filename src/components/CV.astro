---
const pdfUrl = "../../src/media/_jason.gannon.resume.pdf";
const pdfTitle = "Jason Gannon's Resume";
---

<div class="cv-container">
  <h2>{pdfTitle}</h2>
  <p>You can view my resume below or download it for offline viewing.</p>
  
  <div class="pdf-embed">
    <object
      data={pdfUrl}
      type="application/pdf"
      width="100%"
      height="600px"
      aria-label={pdfTitle}
    >
      <p>
        It appears you don't have a PDF plugin for this browser. No worries!
        You can <a href={pdfUrl} download>click here to download the PDF file.</a>
      </p>
    </object>
  </div>

  <div class="cv-actions">
    <a href={pdfUrl} download class="download-button">Download PDF</a>
    <a href={pdfUrl} target="_blank" rel="noopener noreferrer" class="view-button">
      Open PDF in New Tab
    </a>
  </div>
</div>

<style>
  .cv-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  .pdf-embed {
    border: 1px solid #ccc;
    margin-bottom: 20px;
  }

  .cv-actions {
    display: flex;
    gap: 10px;
    justify-content: center;
  }

  .download-button, .view-button {
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .download-button:hover, .view-button:hover {
    background-color: #0056b3;
  }

  @media (max-width: 600px) {
    .pdf-embed {
      height: 400px;
    }
  }
</style>
```